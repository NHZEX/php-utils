{
    "name": "zxin/utils",
    "description": "util tools",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "auooru",
            "email": "auooru@outlook.com"
        }
    ],
    "require": {
        "php": "^7.1|^8.0",
        "ext-json": "*",
        "ext-openssl": "*",
        "symfony/polyfill-php72": "^1.22",
        "symfony/polyfill-php73": "^1.22",
        "symfony/var-dumper": "^4.4|^5.0",
        "symfony/var-exporter": "^4.4|^5.0"
    },
    "require-dev": {
        "ext-bcmath": "*",
        "ext-mbstring": "*",
        "ext-posix": "*",
        "friendsofphp/php-cs-fixer": "^2.18",
        "phpunit/phpunit": "^7|^8|^9"
    },
    "suggest": {
        "ext-bcmath": "unit convertor support",
        "ext-posix": "posix",
        "ext-mbstring": "mbstring"
    },
    "autoload": {
        "psr-4": {
            "Zxin\\": "src/"
        },
        "files": [
            "src/bootstrap.php",
            "src/debug_helper.php",
            "src/reflection_helper.php",
            "src/Crypto/crypto_func.php",
            "src/Array/array_func.php",
            "src/String/string_func.php",
            "src/Util/util.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Zxin\\Tests\\": "tests/",
            "Zxin\\Stub\\": "stub/",
            "Example\\": "example/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": false
    },
    "minimum-stability": "stable"
}
