{
    "name": "zxin/utils",
    "description": "util tools",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "auooru",
            "email": "auooru@outlook.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "ext-bcmath": "*",
        "ext-mbstring": "*",
        "php-cs-fixer/shim": "^3.20",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9",
        "rector/rector": "~0.15.24",
        "symfony/var-dumper": "^5.4|^6"
    },
    "suggest": {
        "ext-bcmath": "unit convertor support",
        "ext-posix": "posix",
        "ext-mbstring": "mbstring",
        "symfony/var-dumper": "debug tool support"
    },
    "autoload": {
        "psr-4": {
            "Zxin\\": "src/"
        },
        "files": [
            "src/bootstrap.php",
            "src/reflection_helper.php",
            "src/Crypto/crypto_func.php",
            "src/Array/array_func.php",
            "src/String/string_func.php",
            "src/Util/util.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Zxin\\Tests\\": "tests/",
            "Zxin\\Stub\\": "stub/",
            "Example\\": "example/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": false,
        "preferred-install": "dist",
        "platform": {
            "php": "7.4"
        }
    },
    "minimum-stability": "stable"
}
